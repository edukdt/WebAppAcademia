@model PessoaModel

<div class="container">
      <div class="row">
        <div class="col-md-12">
          <h4 class="mb-3">Dados da Pessoa</h4>
          <form class="needs-validation" novalidate="" asp-action="Create">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="firstName">First name</label>
                <input type="text" class="form-control" id="firstName" placeholder="" value="@Model.NomeCompleto" required="">
                <div class="invalid-feedback">
                  Valid first name is required.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" id="lastName" placeholder="" value="@Model.Sobrenome" required="">
                <div class="invalid-feedback">
                  Valid last name is required.
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label for="username">Username</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">@@</span>
                </div>
                <input type="text" class="form-control" id="username" placeholder="Username" value="@Model.Login" required="">
                <div class="invalid-feedback" style="width: 100%;">
                  Your username is required.
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label for="email">Email <span class="text-muted">(Optional)</span></label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com" value="@Model.Email">
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="mb-3">
              <label for="address">Data de Nascimento</label>
              <input type="text" class="form-control" id="address" placeholder="dd/MM/yyyy" value="@Model.DataNascimento" required="">
              <div class="invalid-feedback">
                Data de Nascimento
              </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block"  value="Create" type="submit">Salvar</button>
          </form>
        </div>
      </div>
    </div>